<Window x:Class="WpfOneWayBindingExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="One-Way Binding Example" Height="200" Width="300">

    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Name:" />
            <TextBox Text="{Binding Name, Mode=OneWay}" Margin="5" />

            <TextBlock Text="Age:" />
            <TextBox Text="{Binding Age, Mode=OneWay}" Margin="5" />

            <TextBlock Text="Occupation:" />
            <TextBox Text="{Binding Occupation, Mode=OneWay}" Margin="5" />
        </StackPanel>
    </Grid>
</Window>
